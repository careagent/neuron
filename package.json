{
  "name": "@careagent/neuron",
  "version": "0.1.0",
  "type": "module",
  "description": "CareAgent organizational boundary server",
  "bin": {
    "neuron": "./dist/cli/index.mjs"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.mts"
    },
    "./types": {
      "import": "./dist/types/index.mjs",
      "types": "./dist/types/index.d.mts"
    }
  },
  "scripts": {
    "build": "tsdown",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "tsx src/cli/index.ts",
    "lint": "tsc --noEmit"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "license": "MIT",
  "keywords": [
    "careagent",
    "neuron",
    "healthcare",
    "npi"
  ],
  "dependencies": {
    "@sinclair/typebox": "^0.34.48",
    "better-sqlite3": "^12.6.2",
    "bonjour-service": "^1.3.0",
    "commander": "^14.0.3",
    "ws": "^8.19.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.0",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.18",
    "msw": "^2.12.10",
    "tsdown": "~0.20.3",
    "tsx": "^4.21.0",
    "typescript": "~5.7.3",
    "vitest": "~4.0.18"
  }
}
